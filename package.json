{
    "name": "@secretarium/connector",
    "version": "0.0.1",
    "description": "Connector for API communication with Secretarium enclave clusters",
    "main": "lib/secretarium.umd.js",
    "scripts": {
        "preinstall": "node ./scripts/hintYarn.js",
        "test": "jest --coverage",
        "test:mutation": "stryker run ./config/stryker.config.js",
        "build": "webpack --config ./config/webpack.config.js",
        "start": "webpack --config ./config/webpack.config.js --progress --color --watch",
        "serve": "serve",
        "lint": "eslint --ext .js,.ts,.tsx ./src",
        "lint:fix": "eslint --fix --ext .js,.ts,.tsx ./src",
        "release": "release-it"
    },
    "keywords": [
        "secretarium",
        "communication",
        "connector",
        "api"
    ],
    "repository": "https://github.com/secretarium/connector-typescript",
    "author": "Florian Guitton <florian@secretarium.com> (https://github.com/fguitton)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/secretarium/connector-typescript/issues"
    },
    "homepage": "https://github.com/secretarium/connector-typescript#readme",
    "devDependencies": {
        "@babel/core": "7.11.0",
        "@babel/plugin-transform-runtime": "7.11.0",
        "@babel/preset-env": "7.11.0",
        "@babel/preset-typescript": "7.10.4",
        "@babel/runtime": "7.11.0",
        "@commitlint/config-conventional": "9.1.1",
        "@release-it/conventional-changelog": "1.1.4",
        "@stryker-mutator/core": "3.3.1",
        "@stryker-mutator/javascript-mutator": "3.3.1",
        "@stryker-mutator/typescript": "3.3.1",
        "@stryker-mutator/jest-runner": "3.3.1",
        "@typescript-eslint/eslint-plugin": "3.7.1",
        "@typescript-eslint/parser": "3.7.1",
        "@types/jest": "26.0.8",
        "babel-loader": "8.1.0",
        "babel-plugin-add-module-exports": "1.0.2",
        "babel-plugin-transform-class-properties": "6.24.1",
        "babel-plugin-rewire-ts": "1.3.4",
        "commitlint": "9.1.0",
        "eslint": "7.6.0",
        "eslint-plugin-flowtype": "5.2.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "23.20.0",
        "husky": "4.2.5",
        "jest": "26.2.2",
        "release-it": "13.6.6",
        "serve": "11.3.2",
        "typescript": "3.9.7",
        "uglifyjs-webpack-plugin": "2.2.0",
        "webpack": "4.44.1",
        "webpack-cli": "3.3.12"
    },
    "jest": {
        "modulePathIgnorePatterns": [
            "<rootDir>/lib/",
            "<rootDir>/scripts/"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: Release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "babel": {
        "extends": "./config/babel.config.js"
    },
    "eslintConfig": {
        "extends": "./config/eslint.config.js"
    }
}