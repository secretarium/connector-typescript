{
    "name": "@secretarium/connector",
    "version": "0.0.1",
    "description": "Connector for API communication with Secretarium enclave clusters",
    "main": "lib/secretarium.umd.js",
    "scripts": {
        "preinstall": "node ./scripts/hintYarn.js",
        "test": "jest",
        "build": "webpack --config ./config/webpack.config.js",
        "start": "webpack --config ./config/webpack.config.js --progress --color --watch",
        "serve": "serve",
        "lint": "eslint --ext .js,.ts,.tsx .",
        "lint:fix": "eslint --fix --ext .js,.ts,.tsx .",
        "release": "release-it"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/secretarium/connector-typescript",
    "author": "Florian Guitton <florian@secretarium.com> (https://github.com/fguitton)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/secretarium/connector-typescript/issues"
    },
    "homepage": "https://github.com/secretarium/connector-typescript#readme",
    "devDependencies": {
        "@babel/core": "7.9.0",
        "@babel/plugin-transform-runtime": "7.9.0",
        "@babel/preset-env": "7.9.0",
        "@babel/preset-typescript": "7.9.0",
        "@babel/runtime": "7.9.2",
        "@commitlint/config-conventional": "8.3.4",
        "@release-it/conventional-changelog": "1.1.1",
        "@typescript-eslint/eslint-plugin": "2.28.0",
        "@typescript-eslint/parser": "2.28.0",
        "@types/jest": "25.2.1",
        "babel-loader": "8.1.0",
        "babel-plugin-add-module-exports": "1.0.2",
        "babel-plugin-transform-class-properties": "6.24.1",
        "babel-plugin-rewire-ts": "1.3.3",
        "commitlint": "8.3.5",
        "eslint": "6.8.0",
        "eslint-plugin-flowtype": "4.7.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.8.2",
        "husky": "4.2.5",
        "jest": "25.3.0",
        "release-it": "13.5.4",
        "serve": "11.3.0",
        "typescript": "3.8.3",
        "uglifyjs-webpack-plugin": "2.2.0",
        "webpack": "4.42.1",
        "webpack-cli": "3.3.11"
    },
    "jest": {
        "modulePathIgnorePatterns": [
            "<rootDir>/lib/",
            "<rootDir>/demo/",
            "<rootDir>/scripts/"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: Release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "babel": {
        "extends": "./config/babel.config.js"
    },
    "eslintConfig": {
        "extends": "./config/eslint.config.js"
    }
}